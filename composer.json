{
    "repositories": [
        {
            "packagist": false
        },
        {
            "type": "composer",
            "url": "https://packagist.phpcomposer.com"
        }
    ],
    "require": {
        "php": ">=7.0",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17",
        "fzaninotto/faker": "^1.7",
        "slim/twig-view": "^1.0",
        "illuminate/database": "~5.2",
        "illuminate/events": "5.6.*",
        "illuminate/pagination" : "5.6.*",
        "qcloud/cos-sdk-v5": ">=1.0",
        "asyncme/wechatdeveloper" : "dev-master",
        "gregwar/captcha": "^1.1",
        "bryanjhv/slim-session": "~3.0",
        "delight-im/cookie": "^3.1",
        "greenlion/php-sql-parser": "^4.1"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload": {
        "psr-4": {
            "admin\\": "admin/",
            "plugins\\":"plugins/",
